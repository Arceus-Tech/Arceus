---
import CustomButton from "@components/CustomButton.astro";
---

<div
  id="NavBar"
  class="fixed w-full h-screen top-0 justify-between flex-col bg-blue-600 z-50 -translate-y-full transition-all duration-500"
>
  <div class="w-full h-full relative justify-around flex items-center">
    <div
      class="justify-between absolute grid grid-cols-2 items-center w-full h-full p-40 gap-5"
    >
      <div class="flex flex-col">
        <p class="text-blue-50 text-2xl">Services</p>

        <div class="flex flex-col gap-5">
          <CustomButton title="Digital Marketing" />
          <CustomButton title="Web Development" />
          <CustomButton title="App Development" />
        </div>
      </div>
    </div>

    <span class="absolute left-6 lg:left-20 z-10 h-full w-[2px] bg-blue-50"
    ></span>

    <span class="absolute right-6 lg:right-20 z-10 h-full w-[2px] bg-blue-50">
    </span>
  </div>
</div>
